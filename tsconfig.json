{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "NodeNext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "incremental": true,
    "noEmitOnError": true,
    "outDir": "compiled"
  },
  "include": ["src/**/*", "shared/**/*"],
  "exclude": ["node_modules", "functions/**/*"]
}
